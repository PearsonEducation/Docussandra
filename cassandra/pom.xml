    <parent>
        <groupId>com.pearson.docussandra</groupId>
        <artifactId>docussandra-parent</artifactId>
        <version>1.0.4-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.strategicgains</groupId>
            <artifactId>Syntaxe</artifactId>
            <version>0.4.9</version>
        </dependency>
        <dependency>
            <groupId>com.pearson.docussandra</groupId>
            <artifactId>docussandra-domain</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.pearson.docussandra</groupId>
            <artifactId>docussandra-plugin</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!--dependency>
            <groupId>com.strategicgains.repoexpress</groupId>
            <artifactId>repoexpress-cassandra</artifactId>
